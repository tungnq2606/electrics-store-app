<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/category_form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaybold"
            android:gravity="center"
            android:text="New Category"
            android:textSize="22dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameTF"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:layout_marginTop="20dp"
            android:hint="Category name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplaybold"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/select_img"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:cardBackgroundColor="#5fc4e3"
                app:cardCornerRadius="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:text="Select Image"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/newCategoryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp" />

            <TextView
                android:id="@+id/newCategoryImage_Eror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sfprodisplaymedium"
                android:text="Image is required"
                android:textColor="#ff1500"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView

                android:id="@+id/cancelAddNewCategory"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#808080"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:text="Cancel"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/insertAddNewCategory"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#FF5B38"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/categoryBtnTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:text="Insert"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>